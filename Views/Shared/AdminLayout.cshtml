    <meta name="description" content="">
    <meta name="author" content="">
    <title>Time IN Dashboard</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/dashboard.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Admin")">Time In</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index","Admin")">Dashboard</a></li>
                    <li><a href="@Url.Action("ChangePassword","Admin")">Settings</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active"><a href="@Url.Action("Index","Admin")">Overview <span class="sr-only">(current)</span></a></li>
                    <li><a href="@Url.Action("Categories","Admin")"><i class="fa fa-fw fa-leaf"></i>Products</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="@Url.Action("Users","Admin")"><i class="fa fa-fw fa-users"></i>Users</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href="@Url.Action("FeedBack","Admin")"><i class="fa fa-fw fa-envelope-o"></i>Feedback</a></li>
                    <li><a href="@Url.Action("ChangePassword","Admin")"><i class="fa fa-fw fa-gear"></i>Settings</a></li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li><a href='@Url.Action("LogOut","Admin")'><i class="fa fa-fw fa-power-off"></i>Logout</a></li>

                </ul>
            </div>

            @RenderBody()

        </div>
    </div>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
