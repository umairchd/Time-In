@using prj.Models
@model List<Offer>
@{
    ViewBag.Title = "ManageOffers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header">Manage Offers</h1>
    <a href="@Url.Action("AddOffer","Admin")" class="btn btn-success btn-lg">Add Offer</a>
    <br />
    <br />
    @if (Model.Count == 0)
    {
        <h2>No Offers Added</h2>
    }
    else
    {

        <table class="table table-responsive">
            <tbody>
                <tr>
                    <th>ID</th>
                    <th>Description</th>
                    <th>Image</th>
                </tr>

                @foreach (Offer p in Model)
                {

                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Description</td>
                        <td>@p.Image</td>


                        <td><img class="img-responsive" src="~/Uploads/@p.Image" width="50"></td>


                        <td>
                            <form action="@Url.Action("DeleteOffer", "Admin")" role="form" method="POST">
                                <input type="hidden" value="@p.Id" name="Id" />
                                <input type="submit" class="btn btn-danger" value="Delete" />
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>